<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/myBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/boardwalk" />

    <Spinner
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/mySpinner2"
        android:background="@drawable/spinnerstyle"
        android:layout_centerInParent="true"
        android:drawSelectorOnTop="true"
        android:entries="@array/functions"/>

    <Button
        android:id="@+id/launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mySpinner2"
        android:background="@android:color/holo_purple"
        android:text="launch selected option"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"/>



</RelativeLayout>